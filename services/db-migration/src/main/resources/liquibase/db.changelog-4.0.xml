<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <property name="RealBooleanType" value="TINYINT(1)" dbms="mysql"/>

  <changeSet author="filip" id="4.0-1">
    <createTable tableName="timeslicer">
      <column name="id" type="VARCHAR(36)">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="user_id" type="VARCHAR(36)">
        <constraints nullable="false" />
      </column>
      <column name="trees_file_url" type="VARCHAR(200)">
        <constraints nullable="false" />
      </column>
      <column name="slice_heights_file_url" type="VARCHAR(200)"/>
      <column name="status" type="VARCHAR(50)">
        <constraints nullable="false" />
      </column>
      <column name="burn_in" type="INT"/>
      <column name="output_file_url" type="VARCHAR(200)"/>
      <column name="readable_name" type="VARCHAR(200)"/>
      <column name="trait_attribute_name" type="VARCHAR(50)"/>
      <column name="relaxed_random_walk_rate_attribute_name" type="VARCHAR(50)"/>
      <column name="hpd_level" type="VARCHAR(3)"/>
      <column name="contouring_grid_size" type="INT"/>
      <column name="timescale_multiplier" type="FLOAT"/>
      <column name="most_recent_sampling_date" type="VARCHAR(20)"/>
      <column name="trees_count" type="INT"/>
    </createTable>
  </changeSet>

  <changeSet author="filip" id="4.0-2">
    <createIndex indexName="timeslicer_SLASH_user_id_INDEX" tableName="timeslicer">
      <column name="user_id"/>
    </createIndex>
  </changeSet>

  <changeSet author="filip" id="4.0-3">
    <addForeignKeyConstraint constraintName="timeslicer_SLASH_user_id_FK"
                             baseColumnNames="user_id"
                             baseTableName="timeslicer"
                             referencedColumnNames="id"
                             referencedTableName="user"
                             onDelete="CASCADE"
                             onUpdate="RESTRICT"
                             deferrable="false"
                             initiallyDeferred="false"
                             validate="true"/>
  </changeSet>

  <changeSet author="filip" id="4.0-4">
    <createTable tableName="timeslicer_attributes">
      <column name="timeslicer_id" type="VARCHAR(36)">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="attribute_name" type="VARCHAR(200)">
        <constraints nullable="false" primaryKey="true"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="filip" id="2.0-5">
    <addForeignKeyConstraint constraintName="timeslicer_attributes_SLASH_timeslicer_FK"
                             baseColumnNames="timeslicer_id"
                             baseTableName="timeslicer_attributes"
                             referencedColumnNames="id"
                             referencedTableName="timeslicer"
                             onDelete="CASCADE"
                             onUpdate="RESTRICT"
                             deferrable="false"
                             initiallyDeferred="false"
                             validate="true"/>
    <addUniqueConstraint
        columnNames="timeslicer_id, attribute_name"
        constraintName="unique_timeslicer_attribute_names"
        tableName="timeslicer_attributes"/>
  </changeSet>

</databaseChangeLog>
